<!-- This resource is used to set the spinner to a style that has a red border around it -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- This shape is used to add a red border around the spinner-->
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FF0000" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- This is used to keep the theme of the spinner the same with a drop down arrow -->
            <item
                android:width="26dp"
                android:height="26dp"
                android:drawable="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="center_vertical|right"
                android:right="12dp"/>      <!-- This line adjust the off set of the dropdown arrow,
                the large the value the more it will be moved to the left -->
        </layer-list>
    </item>
</layer-list>
