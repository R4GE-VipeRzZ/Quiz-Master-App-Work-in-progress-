<!-- This resource is used to set a spinner back to the default style after it has had a border placed around it -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is used to keep the theme of the spinner the same with a drop down arrow -->
    <item
        android:width="39dp"
        android:height="39dp"
        android:drawable="@drawable/ic_arrow_drop_down_black_24dp"
        android:gravity="center_vertical|right"
        android:right="12dp"/>      <!-- This line adjust the off set of the dropdown arrow,
        the large the value the more it will be moved to the left -->
</layer-list>
