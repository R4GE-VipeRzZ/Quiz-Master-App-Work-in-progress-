<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setupPgTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_pg_title_label"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/setupPgTeam1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_pg_team1_label"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTitleLabel"
        app:layout_constraintVertical_bias="0.106" />

    <TextView
        android:id="@+id/setupPgTeam2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_pg_team2_label"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTeam1Label"
        app:layout_constraintVertical_bias="0.063" />

    <Spinner
        android:id="@+id/setupPgTeam1Dropdown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:contentDescription="@string/setup_pg_team1_dropdown_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTitleLabel"
        app:layout_constraintVertical_bias="0.104" />

    <Spinner
        android:id="@+id/setupPgTeam2Dropdown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:contentDescription="@string/setup_pg_team2_dropdown_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTeam1Dropdown"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/setupPgBoardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_pg_board_label"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTeam2Label"
        app:layout_constraintVertical_bias="0.072" />

    <Spinner
        android:id="@+id/setupPgBoardDropdown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/setup_pg_board_dropdown_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgTeam2Dropdown"
        app:layout_constraintVertical_bias="0.040" />

    <ImageView
        android:id="@+id/setupPgBoardImg"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:contentDescription="@string/setup_pg_img_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgBoardDropdown"
        app:layout_constraintVertical_bias="0.102"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/setupPgStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_pg_start_btn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPgBoardImg"
        app:layout_constraintVertical_bias="0.158" />
</androidx.constraintlayout.widget.ConstraintLayout>