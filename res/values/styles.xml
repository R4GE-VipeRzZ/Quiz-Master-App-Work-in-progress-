<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme -->
    <style name="AppTheme" parent="Theme.Design.Light">
        <!-- Customize the theme here -->
    </style>

    <!-- Dialog theme for API 19 and lower-->
    <style name="MyDialogThemeAPI19" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowTitleStyle">@style/MyDialogTitleStyle</item>
    </style>

    <!-- Dialog theme for API 21 and 22 -->
    <style name="MyDialogThemeAPI21And22" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/my_dialog_background_for_api_21_22</item>
    </style>

    <!-- Dialog title style -->
    <style name="MyDialogTitleStyle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Vertical Progress Bar -->
    <style name="VerticalProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:progressDrawable">@null</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>